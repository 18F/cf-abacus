#!/bin/bash

# Stop all the Abacus services
export CONF=default
if [ -n "$1" ]; then
  export CONF=$1
fi

node_modules/abacus-etc/apprc node_modules/abacus-etc/apps.rc $CONF apps | awk '{
  printf "(APP=$(node_modules/abacus-etc/appname %s) && (cd node_modules/$APP && npm stop &))\n", $1;
}' | bash

